extends  ../_skeleton

//- Includes
block variables
  - var activeCategory = 'pages'
  - var pageName = 'Tables'

block page
  include ../sections/header/_header-default

  // Breadcrumbs
  +breadcrumbs({
    category: activeCategory,
    path: [pageName],
    bgImage: 'bg-image-11-1920x663'
  })

  section.section.section-md.bg-default.text-center
    .container
      .text-center
        h3 Tables
        p.big.block-sm Tables have always been perfect for displaying facts and numbers. Now you can benefit from using them on your website.

      .table-custom-responsive
        table.table-custom.table-custom-secondary
          thead
            tr
              th Column 1
              th Column 2
              th Column 3
              th Column 4

          tbody
            tr
              td Item #1
              td Description
              td Subtotal
              td $3.00
            tr
              td Item #2
              td Description
              td Discount
              td $3.00
            tr
              td Item #3
              td Description
              td Shipping
              td $3.00

            tr
              td Item #4
              td Description
              td Tax
              td $4.00

          tfoot
            tr
              td All Items
              td Description
              td Your Total
              td $13.00

  hr

  section.section.section-md.bg-default.text-center
