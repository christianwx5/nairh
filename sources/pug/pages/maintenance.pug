extends  ../_skeleton

//- Includes
include ../components/_ui-testimonials
include ../components/_ui-team

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Maintenance'
block page
  // Header Default
  include ../sections/header/_header-default

  // Breadcrumbs
  +breadcrumbs({
    category: activeCategory,
    path: [pageName],
    bgImage: 'bg-image-11-1920x663'
  })

  // 404
  section.section.section-lg.bg-default.text-center
    .container
      .maintenance-block
        h4 We are currently working on
        h3 This page will appear in
        .countdown-wrap
          .DateCountdown(data-type='until' data-date='2018-12-31 00:00:00' data-format='wdhms' data-color='#ffdf61' data-bg='rgba(245, 245, 245, 1)' data-width='0.02')

        .block-md.block-md-big
          p: span(style='max-width: 450px;') Stay tuned and subscribe to our newsletter.
          form.rd-form.rd-mailform.rd-form-inline(data-form-output='form-output-global' data-form-type='subscribe' method='post' action='bat/rd-mailform.php')
            .form-wrap
              input.form-input#subscribe-form-email(type='email' name='email' data-constraints='@Email @Required')
              label.form-label(for='subscribe-form-email') Your  E-mail
            .form-button
              button.button.button-secondary-light(type='submit') Subscribe

  // Footer Classic
  include ../sections/footer/_footer-classic