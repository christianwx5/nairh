extends  ../_skeleton

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Coming Soon'

block page 
  // Page content
  section.section.section-single.bg-gray-700(style='background-image: url(images/bg-image-15-1920x955.jpg)')
    .section-single-inner
      .section-single-header: .container
        // Brand
        a.brand(href='index.html'): +png(logo.inverse.normal)

      .section-single-main: .container
        h3.font-weight-medium We're getting ready to launch in
        .divider.divider-small.divider-secondary

        .countdown-wrap
          .DateCountdown(data-type='until' data-date='2019-12-31 00:00:00' data-format='wdhms' data-color='#ffdf61' data-bg='rgba(255, 255, 255, 1)' data-width='0.02')

        p: span(style='max-width: 450px;') Our website is under construction, we are working very hard to give you the best experience on our new web site.

        .rd-mailform-wrap
          form.rd-form.rd-mailform.rd-form-inline(data-form-output='form-output-global' data-form-type='subscribe' method='post' action='bat/rd-mailform.php')
            .form-wrap
              input.form-input#subscribe-form-email(type='email' name='email' data-constraints='@Email @Required')
              label.form-label(for='subscribe-form-email') Your  E-mail
            .form-button
              button.button.button-secondary-light(type='submit') Subscribe

      .section-single-footer: .container
        +rights
